index c7f26d291..caca8ff7d 100644
--- a/src/library.js
+++ b/src/library.js
@@ -492,7 +492,7 @@ addToLibrary({
 #if EXCEPTION_STACK_TRACES
     throw new EmscriptenSjLj;
 #else
