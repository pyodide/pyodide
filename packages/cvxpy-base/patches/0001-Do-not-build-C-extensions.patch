From: Philipp Schiele <44360364+phschiele@users.noreply.github.com>
Date: Fri, 1 Mar 2024 22:51:50 +0000
Subject: [PATCH] Do not build C++ extensions, make SciPy backend default

---
 cvxpy/settings.py | 2 +-
 setup.py          | 3 +--
 2 files changed, 2 insertions(+), 3 deletions(-)

diff --git a/cvxpy/settings.py b/cvxpy/settings.py
index 1d1ef3eb1..662b227dc 100644
--- a/cvxpy/settings.py
+++ b/cvxpy/settings.py
@@ -182,7 +182,7 @@ SCIPY_CANON_BACKEND = "SCIPY"
 RUST_CANON_BACKEND = "RUST"
 CPP_CANON_BACKEND = "CPP"
 
-DEFAULT_CANON_BACKEND = CPP_CANON_BACKEND
+DEFAULT_CANON_BACKEND = SCIPY_CANON_BACKEND
 
 # Numerical tolerances
 EIGVAL_TOL = 1e-10
diff --git a/setup.py b/setup.py
index 992ea6eb9..063fab949 100644
--- a/setup.py
+++ b/setup.py
@@ -5,7 +5,6 @@ import platform
 import sys
 import sysconfig
 
-import setup.extensions as setup_extensions
 import setup.versioning as setup_versioning
 
 # BEFORE importing setuptools, remove MANIFEST. Otherwise it may not be
@@ -56,7 +55,7 @@ VERSION = setup_versioning.VERSION
 setup(
     version=str(VERSION),
     cmdclass={'build_ext': build_ext_cvxpy},
-    ext_modules=[setup_extensions.cvxcore, setup_extensions.sparsecholesky],
+    ext_modules=[],
     packages=find_packages(exclude=["doc*",
                                     "examples*",
                                     "cvxpy.performance_tests*"]),
