{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "../../dist",
    "esModuleInterop": true,
    "target": "ES2017",
    "module": "ES2020",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["*.ts"],
  "exclude": ["test/**/*"]
}
