{
  "$schema": "http://json.schemastore.org/tsconfig",
  "rootDir": "../../",
  "compilerOptions": {
    "outDir": "../../dist",
    "esModuleInterop": true,
    "target": "ES2018",
    "module": "ES2020",
    "moduleResolution": "node",
    "composite": true,
    "strict": true,
    "noUnusedLocals": false,
    "types": ["node"],
    "experimentalDecorators": true,
    "lib": ["ES2018", "DOM"],
    "resolveJsonModule": true,
    "baseUrl": "..",
    "paths": {
      "*": ["*", "js/*", "core/*"]
    }
  },
  "include": ["*.ts", "*.json"],
  "exclude": ["test/**/*"]
}
