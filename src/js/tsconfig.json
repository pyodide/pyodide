{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "../../dist",
    "esModuleInterop": true,
    "target": "ES2017",
    "module": "ES2020",
    "moduleResolution": "node",
    "composite": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "types": ["node"]
  },
  "include": ["*.ts"],
  "exclude": ["test/**/*"]
}
