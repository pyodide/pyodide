{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["ES2021", "DOM"],
    "outDir": "../../build",
    "rootDir": ".",
    "esModuleInterop": true,
    "target": "ES6",
    "module": "ES2020",
    "moduleResolution": "node"
  },
  "include": [
    "./*.js",
    "pyodide.ts",
    "module.ts",
    "load-package.ts",
    "compat.ts",
    "api.ts"
  ],
  "exclude": ["rollup.config.js"]
}
