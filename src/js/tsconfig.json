{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "rootDir": "..",
    "outDir": "../../dist",
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "composite": true,
    "strict": true,
    "noUnusedLocals": false,
    "types": ["node"],
    "experimentalDecorators": true,
    "lib": ["ES2022", "DOM"],
    "resolveJsonModule": true,
    "baseUrl": "..",
    "paths": {
      "generated/*": ["js/generated/*", "core/*"],
      "*": ["*", "js/*"]
    }
  },
  "include": ["../**/*.ts", "*.json"],
  "exclude": ["../**/*test*/**/*"]
}
